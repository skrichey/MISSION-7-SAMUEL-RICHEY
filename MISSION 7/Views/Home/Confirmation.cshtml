@model MovieCollection.Models.Movie

@{
    ViewData["Title"] = "Movie Added";
}

<h2>Movie Successfully Added!</h2>

<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Category:</strong> @Model.Category</p>
<p><strong>Year:</strong> @Model.Year</p>
<p><strong>Director:</strong> @Model.Director</p>
<p><strong>Rating:</strong> @Model.Rating</p>
<p><strong>Edited:</strong> @(Model.Edited ? "Yes" : "No")</p>
<p><strong>Lent To:</strong> @Model.LentTo</p>
<p><strong>Notes:</strong> @Model.Notes</p>

<a asp-controller="Home" asp-action="AddMovie">Add Another Movie</a>