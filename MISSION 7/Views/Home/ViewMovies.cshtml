@model List<MovieCollection.Models.Movie>

<h2>Movie Collection</h2>

<table class="table table-bordered" border="1">

    <thead class="fw-bold">
        <tr>
            <th>Movie Title</th>
            <th>Movie Category</th>
            <th>Movie Year</th>
            <th>Movie Director</th>
            <th>Movie Rating</th>
            <th>Edited Status</th>
            <th>Lent To</th>
            <th>Movie Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Category</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited ? "Yes" : "No")</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>

                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
