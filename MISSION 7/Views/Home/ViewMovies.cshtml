@model List<MovieCollection.Models.Movie>

<h2>Movie Collection</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Movie Title</th>
            <th>Movie Category</th>
            <th>Movie Year</th>
            <th>Movie Director</th>
            <th>Movie Rating</th>
            <th>Edited Status</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Movie Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@(movie.Category != null ? movie.Category.CategoryName : "Unknown")</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited ? "Yes" : "No")</td>
                <td>@movie.LentTo</td>
                <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                <td>@movie.Notes</td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-warning">Edit</a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
